export PATH=`pwd`/bin:$PATH
export PROMISEPATH=`pwd`/promises/


knaf() {
  action=$1
  case $action in
    facts)
      facter
      ;;
    verify|enforce)
      facter | decider | dispatcher $action | sh
      ;;
    *)
      return 1
      ;;
  esac
}
