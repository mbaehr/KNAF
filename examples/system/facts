#!/bin/bash
#
# Basic facter for KNAF
#
# (C) 2015 Mike Baehr
#
# This is free software: see COPYING for terms/conditions

echo -n hostname: ; hostname
echo -n os: ; uname
if [ -x /usr/sbin/dmidecode ]; then
  echo -n "vendor:"
  /usr/sbin/dmidecode | awk \
    '/Vendor/ {print $2}'
elif [ -x /usr/sbin/system_profiler ]; then
  echo "vendor:apple"
fi
